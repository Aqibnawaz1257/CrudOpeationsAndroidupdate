<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Update_page">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Student data"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uedtphone"
        android:hint="Enter the Username"
        android:background="@drawable/edtbackground"
        android:padding="10dp"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uedtname"
        android:hint="Enter the first name"
        android:layout_marginTop="10dp"
        android:background="@drawable/edtbackground"
        android:padding="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uedtlname"
        android:hint="Enter the last name"
        android:layout_marginTop="10dp"
        android:background="@drawable/edtbackground"
        android:padding="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uedtemail"
        android:hint="Enter the email"
        android:background="@drawable/edtbackground"
        android:padding="10dp"
        android:layout_marginTop="10dp"

        />

<!--    <EditText-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/uedtpass"-->
<!--        android:hint="Enter the password"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:background="@drawable/edtbackground"-->
<!--        android:padding="10dp"-->

<!--        />-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Data"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_Update"
        android:backgroundTint="#4CAF50"
        />

</LinearLayout>